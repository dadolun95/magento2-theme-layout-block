<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="page.wrapper">
            <referenceContainer name="top.content.container">
                <referenceBlock name="top.content">
                    <arguments>
                        <argument name="positionManager" xsi:type="object">Dadolun\ThemeLayoutBlock\ViewModel\CmsPagePositionManager</argument>
                    </arguments>
                </referenceBlock>
            </referenceContainer>
            <referenceContainer name="bottom.content.container">
                <referenceBlock name="bottom.content">
                    <arguments>
                        <argument name="positionManager" xsi:type="object">Dadolun\ThemeLayoutBlock\ViewModel\CmsPagePositionManager</argument>
                    </arguments>
                </referenceBlock>
            </referenceContainer>
        </referenceContainer>
    </body>
</page>
